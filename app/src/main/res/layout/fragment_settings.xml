<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:showIn="@layout/activity_settings"
    tools:context="tk.sbarjola.pa.featherlyricsapp.SettingsActivityFragment">

    <Switch
        android:gravity="start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Mostrar notificaciones"
        android:id="@+id/settings_mostrarToast"
        android:checked="true"
        android:textColor="#000000"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingRight="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:showText="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostar una notificación con el nombre y artista de la canción en reproducción"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/settings_mostrarToast"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp" />

    <Switch
        android:gravity="start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Splash Screen"
        android:id="@+id/settings_mostarSplashScreen"
        android:checked="false"
        android:textColor="#000000"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingRight="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:showText="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar el splash screen al iniciar la aplicación"
        android:id="@+id/textView3"
        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/settings_mostarSplashScreen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:gravity="start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Tono aplicación"
        android:id="@+id/settings_sound"
        android:checked="false"
        android:textColor="#000000"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingRight="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:showText="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproduce el sonido de la aplicación al inicio"
        android:id="@+id/textView4"
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@+id/settings_sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar BBDD"
        android:id="@+id/settings_buttonBBDD"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#767b80"
        android:id="@+id/view"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Limpiar el historial de reproducciones"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacíar la base de datos que contiene el historial de reproducciones"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>