<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context="tk.sbarjola.pa.featherlyricsapp.Identificacion.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_TextPassword"
            android:hint="@string/register_contrasenya"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/register_TextEmail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/register_TextEmail"
            android:layout_alignStart="@+id/register_TextEmail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_TextEmail"
            android:hint="@string/register_email"
            android:maxLines="1"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/editprofile_guardarCambios"
            android:layout_alignStart="@+id/editprofile_guardarCambios"
            android:layout_alignRight="@+id/editProfile_nombreUser"
            android:layout_alignEnd="@+id/editProfile_nombreUser" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/editProfile_info"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/editProfile_SobreMi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_button_register"
            android:id="@+id/editprofile_guardarCambios"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/editProfile_info"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Credenciales de tu cuenta"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/register_info"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/register_TextPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editProfile_SobreMi"
            android:hint="@string/register_about"
            android:layout_below="@+id/editProfile_edadUser"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editProfile_edadUser"
            android:hint="@string/register_edad"
            android:layout_below="@+id/editProfile_nombreUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editProfile_SobreMi"
            android:layout_alignEnd="@+id/editProfile_SobreMi" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editProfile_nombreUser"
            android:hint="@string/register_nombre"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editProfile_SobreMi"
            android:layout_alignEnd="@+id/editProfile_SobreMi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/register_info_button"
            android:gravity="center"
            android:id="@+id/textView10"
            android:layout_below="@+id/editprofile_guardarCambios"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:id="@+id/editProfile_profilePic"
            android:src="@drawable/user_icon"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</ScrollView>


