<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00/00/00"
        android:id="@+id/list_fecha"
        android:layout_gravity="right"
        android:textSize="15dp"
        android:layout_below="@+id/list_titular"
        android:layout_alignLeft="@+id/list_descripcion"
        android:layout_alignStart="@+id/list_descripcion"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titular"
        android:id="@+id/list_titular"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/list_imagenPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="146dp"
        android:text="Descripcion"
        android:id="@+id/list_descripcion"
        android:maxLines="8"
        android:layout_below="@+id/list_fecha"
        android:layout_alignLeft="@+id/list_titular"
        android:layout_alignStart="@+id/list_titular"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff" />

</RelativeLayout>