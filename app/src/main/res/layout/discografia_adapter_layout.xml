<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/adapter_albums"
        android:layout_below="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignLeft="@+id/discografia_adapter_Titulo"
        android:layout_alignStart="@+id/discografia_adapter_Titulo"
        android:layout_alignRight="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignEnd="@+id/discografia_adapter_imagenAlbum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:id="@+id/discografia_adapter_Titulo"
        android:textAlignment="center"
        android:maxLines="3"
        android:minLines="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:gravity="top|left"
        android:textColor="#2e373f"
        android:layout_below="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignLeft="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignStart="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignRight="@+id/discografia_adapter_imagenAlbum"
        android:layout_alignEnd="@+id/discografia_adapter_imagenAlbum" />

</RelativeLayout>