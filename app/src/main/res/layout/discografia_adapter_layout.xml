<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="190dp"
        android:layout_height="250dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:descendantFocusability="blocksDescendants">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:id="@+id/discografia_adapter_imagenAlbum"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/discografia_adapter_Titulo"
            android:textAlignment="center"
            android:maxLines="3"
            android:minLines="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:gravity="top|left"
            android:textColor="#2e373f"
            android:layout_below="@+id/discografia_adapter_imagenAlbum"
            android:layout_alignLeft="@+id/discografia_adapter_imagenAlbum"
            android:layout_alignStart="@+id/discografia_adapter_imagenAlbum"
            android:layout_alignRight="@+id/discografia_adapter_imagenAlbum"
            android:layout_alignEnd="@+id/discografia_adapter_imagenAlbum"
                android:layout_alignParentBottom="true" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>