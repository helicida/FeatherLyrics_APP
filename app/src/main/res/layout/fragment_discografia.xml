<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:background="#FFF"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discografia_artistImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discografia_gridDiscos"
        android:columnWidth="170dp"
        android:numColumns="auto_fit"
        android:layout_alignRight="@+id/discografia_artistInfo"
        android:layout_alignEnd="@+id/discografia_artistInfo"
        android:layout_alignTop="@+id/discografia_listCanciones" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:id="@+id/discografia_listCanciones"
        android:visibility="visible"
        android:textColor="#FFFF"
        android:layout_alignRight="@+id/discografia_artistInfo"
        android:layout_alignEnd="@+id/discografia_artistInfo"
        android:layout_below="@+id/discografia_artistInfo" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/discografia_artistInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/discografia_artistName"
        android:layout_above="@+id/discografia_gridDiscos"
        android:layout_toRightOf="@+id/scrollView2"
        android:layout_toEndOf="@+id/scrollView2"
        android:textSize="30dp"
        android:textColor="#ffffff" />

</RelativeLayout>

